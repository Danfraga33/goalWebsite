generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}
enum NoteCategory {
  Education
  SaaS
  Savings
  ECommerce
  Job
  Agency
  Dividends
  RentalIncome
  Tax
  PublicEquities
  RealEstate
  VentureCapital
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  Notes Note[]
}

model Note {
  id        Int     @id @default(autoincrement())
  title     String
  category  NoteCategory
  content   String?
  createdAt Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}


